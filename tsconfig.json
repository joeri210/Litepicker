		"outDir": "./dist/types",
		"module": "esnext",
		"target": "es5",
		"declaration": true,
		"plugins": [{"name": "typescript-plugin-css-modules"}],
		"moduleResolution": "bundler"
	},
	"include": ["src/**/*"],
	"exclude": [
